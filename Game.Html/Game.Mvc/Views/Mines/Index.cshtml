@model Game.Mvc.Models.City
@{
    ViewBag.Title = "Mines";
}

<table class="resourcesTable">
    <tr>
        @foreach (var res in this.Model.Resources)
        {

            <td class="res-img @(res.Type)"><img src="~/Content/img/icon-@(res.Type).png" /></td>
            <td class="res-value @(res.Type)" id="@(res.Type)">@res.Level.ToString("n4")</td>
            <td class="res-update @(res.Type) hidden">@res.LastUpdate</td>

        }
    </tr>
</table>
<div class="main">
    <table class="mines">
        <thead>
            <tr>
                <td colspan="2">Tip resursă</td>
                <td>Nivel</td>
                <td>Acțiune</td>
            </tr>
        </thead>
        <tbody>

            <div class="main">
                <img src="~/Content/img/village-bg.jpg" id="village-bg" />

                <div class="village-wrapper">
                    @foreach (var mine in this.Model.Mines)
                    {
                        <div class="mine-level @mine.Type.ToString().ToLower() @mine.MineStyle ">
                            <div class="hidden">@mine.Type</div>
                            <div class="mine-details-btn" data-mine-id="@mine.MineId">@mine.Level</div>
                            <div class="hourProduction hidden">@mine.GetProductionPerHour()</div>
                        </div>
                    }
                </div>

            </div>
            <div id="mine-details-container">
                <div class="close-btn">X</div>
                <div class="content"></div>
            </div>
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/Scripts/site/mines.js"> </script>
    <script src="~/Scripts/Date.min.js"></script>   
}